<Window x:Class="IPOstuff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPOstuff"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label>Length</Label>
        <TextBox x:Name="txtLength"/>
        <Label>Width</Label>
        <TextBox x:Name="txtWidth"/>
        <Button x:Name="BtnCalculate" Content="Find Area"
                Click="BtnCalculate_Click"/>
        <Label x:Name="lblOutput"/>
    </StackPanel>
</Window>
